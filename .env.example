# ConsensusLab 环境变量配置模板
# 复制此文件为 .env 并填写实际值

# 数据库配置（必需）
DATABASE_URL=mysql://consensuslab_user:your_password_here@localhost:3306/consensuslab

# JWT 配置（必需）
JWT_SECRET=your_jwt_secret_key_here

# AI API 配置（二选一）
# 选项1: 使用内置 Manus AI 提供商（推荐用于快速开始）
BUILT_IN_FORGE_API_URL=https://forge.manus.im
BUILT_IN_FORGE_API_KEY=your_manus_api_key_here
VITE_FRONTEND_FORGE_API_URL=https://forge.manus.im
VITE_FRONTEND_FORGE_API_KEY=your_frontend_api_key_here

# 选项2: 在 UI 中配置自定义 AI 提供商（OpenAI/Claude）
# 如果不配置上面的 BUILT_IN_FORGE_API_KEY，请确保在应用的 "AI 设置" 页面中添加 OpenAI 或 Claude API 密钥

# OAuth 配置（可选）
OAUTH_SERVER_URL=https://api.manus.im
VITE_OAUTH_PORTAL_URL=https://portal.manus.im
VITE_APP_ID=your_app_id_here

# 应用配置（可选）
VITE_APP_TITLE=ConsensusLab
VITE_APP_LOGO=/logo.svg

# 所有者信息（可选）
OWNER_OPEN_ID=admin
OWNER_NAME=Admin

# 服务器配置（可选）
PORT=3000
NODE_ENV=production
